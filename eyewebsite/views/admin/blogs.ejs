<%-include("navbar.ejs")%>



<form action="/admin/save_blogs" method="post" enctype="multipart/form-data">
    <div class="container">
        <h1>BLOG*</h1>
        <div class="row">
            <div class="col-md-6 mb-3">
                 Title*
                <input type="text" name="blog_name" class="form-control" placeholder="Enter Blog Title" required>
            </div>
            <div class="col-md-6 mb-3">
                 Image*
                <input type="file" name="blog_image" class="form-control" placeholder="Upload Image" required>
            </div>
            <div class="col-md-6 mb-3">
                Date*
               <input type="date" name="blog_date" class="form-control" placeholder="Enter Blog Post Date" required>
           </div>
           <div class="col-md-6 mb-3">
            Category*
           <input type="category" name="blog_category" class="form-control" placeholder="Enter Blog Category" required>
       </div>
           <div class="col-md-6 mb-3">
            Author*
           <input type="text" name="blog_author" class="form-control" placeholder="Enter Author Name" required>
            </div>
            <div class="col-md-12 mb-3">
                Details*
            <input type="text" name="blog_details" class="form-control" placeholder="Enter Blog Details" required>
            </div>
                <br>
            <div class="col-md-4 mb-3">
                <button class="btn btn-primary">Save</button>
           
            </div>
        </div>
       
    </div>
</form> 


<div class="container p-4">
    <h1>Blog list</h1>
    <div class="row">
      <div class="col-md-12">
        <table class="table table-bordered table-sm ">
          <tr>
            <th>Action</th>
            <th>SrNo</th>
            <th>Title</th>
            <th>Image</th>
            <th>Date</th>
            <th>Category</th>
            <th>Author</th>
            <th>Details</th>

          </tr>
          <% blog.map((row,i)=>{ %>
            <tr>
              <td>
                <a href="/admin/delete_blog/<%=row.blog_id%>"><button><i class="fas fa-trash text-danger"></i></button></a>


              </td>
              <td><%-i+1%></td>
              <td><%-row.blog_title %></td>

              <td>
                <img src="/<%-row.blog_image %> " width="100px">
                
            </td>
              <td><%-row.blog_date %></td>
              <td><%-row.blog_category %></td>
              <td><%-row.blog_author %></td>
              <td><%-row.blog_details %></td>


  
  
  
            </tr>
          <% }) %>
        </table>
      </div>
    </div>
  </div>

        

<%-include("footer.ejs")%>
