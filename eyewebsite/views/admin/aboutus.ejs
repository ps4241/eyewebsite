<%-include("navbar.ejs")%>

<div class="container">
    <div class="row">
        <form action="/admin/save_aboutus" method="post" enctype="multipart/form-data">
            <div class="container">
                <h1>About us</h1>
                <div class="row">

                    <div class="col-md-6 mb-3">
                        Enter about us image*
                        <input type="file"  class="form-control" name="about_image" value="<%-aboutus.hospital_name%>" >
                     </div>
                    <div class="col-md-6 mb-3">
                        Enter title*
                        <input type="text"  class="form-control" name="about_title" value="<%-aboutus.about_title%>"required>
                     </div>
                     <div class="col-md-6 mb-3">
                        Enter tag-line*
                        <input type="text" class="form-control" name="about_tagline" value="<%-aboutus.about_tagline%>" required>
                     </div>
                     <div class="col-md-6 mb-3">
                        Enter main doctor*
                        <input type="text" class="form-control" name="main_doctor" value="<%-aboutus.main_doctor%>">
                     </div>
                     <div class="col-md-12 mb-3">
                        Enter details*
                        <input type="text" class="form-control" name="about_details" value="<%-aboutus.about_details%>" required>
                     </div>
                    
                     
                     <div class="col-md-4 mb-3">
                        <button class="btn btn-primary">Save</button>
                     </div>
                </div>
            </div>
        
        </form>
        </div>
</div>
<%-include("footer.ejs")%>
